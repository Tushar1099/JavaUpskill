package basicDS;

import java.util.Scanner;

public class StudentResult {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int[][] marks = new int[3][3];
		for (int i = 0; i < marks.length; i++) {
			System.out.println("Enter student " + (i+1) + " marks");
			for (int j = 0; j < marks.length; j++) {
				System.out.println("Enter subject " + (j+1) + " marks");
				marks[i][j] = sc.nextInt();
			}
		}
		
		double totalScore = marks[0][0] + marks[1][0] + marks[2][0] + marks[0][1] + marks[1][1] + marks[2][1] + marks[0][2] + marks[1][2] + marks[2][2];
		double totalAvg = totalScore/3;
		System.out.println(totalScore + " " + totalAvg);
		
	}
}
