package basicDS;

import java.util.Scanner;

public class ArmStrongHundredToThousand {
	public static int numCount(int num) {
		int count = 0;
		while (num != 0) {
			int temp = num % 10;
			count++;
			num = num / 10;
		}
		return count;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		for (int i = 100; i < 1000; i++) {

			try {
				int num = i;
				int temp = num;
				int cube = 0;
				int armNum = 0;
				int count = numCount(num);

				while (num != 0) {
					int temp1 = num % 10;
					int digitPower = 1;
					for (int j = 0; j < count; j++) {
						digitPower *= temp1;
					}
					armNum = armNum + digitPower;
					num = num / 10;
				}

				if (temp == armNum) {
					System.out.println("ArmStrong Number " + temp);
				} 
			} catch (Exception e) {
				System.out.println("Error ");
			}
		}
	}

}
